// use gc (libgc)
#define _COTL_USE_GC

// use libgc from OS instead of ./gc
#define _COTL_USE_GLOBAL_GC

// use weak allocator (traceable_allocator<T>)
// #define _COTL_USE_WEAK_ALLOCATOR

// use reference counter
#define _COTL_USE_REF_COUNT

// use deque instead of vector
#define _COTL_USE_DEQUE

// use unordered_map instead of map
#define _COTL_USE_UNORDERED_MAP

// use exception catching tools
#define _COTL_USE_ERR_CATCH

// size of the initializer buffer
#define _COTL_VAL_INIT_SIZE 4096

// max repr depth
#define _COTL_VAL_REPR_DEPTH 16
